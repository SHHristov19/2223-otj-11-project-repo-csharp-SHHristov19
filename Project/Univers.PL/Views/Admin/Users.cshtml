@model Univers.Models.Models.AdminUsers

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #5349E3;
    }
</style>

@{
    int counter = 1;
}
<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">
     
    <div class="container text-center">
        <div class="row">
            @Html.ActionLink("Потребители", "Users", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn active btn-lg rounded-5" })
            @Html.ActionLink("Студенти", "Students", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn btn-lg rounded-5" })
        </div>
    </div>
    <br />
    <div class="overflow-y-scroll" style="height: 80%; Width: 94%; position: absolute;">
        <br />
        <br />
        @if (Model.Users == null)
        {
            <label class="fs-2 text-center" style="color: #ff03ad; width: 100%;">
                Все още няма поправителни изпити!
            </label>
            <br />
        }
        else
        {   
            @foreach (var user in Model.Users)
            { 
                <div class="list-group" style="margin-bottom: 1%; margin-right: 3%;">
                    <button type="button" class="list-group-item list-group-item-action" aria-current="true">
                        <div class="container text-center">
                            <div class="row">
                                <div class="col-1 text-uppercase">
                                    @counter
                                    @{
                                        counter++;
                                    }
                                </div>
                                <div class="col text-uppercase">
                                    @{ string name = $"{@user.FirstName} {@user.MiddleName} {@user.LastName}"; }
                                    @name
                                </div> 
                            </div>
                        </div>
                    </button>
                </div> 
            }
        }
    </div>
</div> 