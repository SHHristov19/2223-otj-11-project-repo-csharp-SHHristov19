@model Univers.Models.Models.AdminUsers

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители"; 
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script> 
<style>
    body {
        background: #5349E3;
    }
</style>

@{
    int counter = 1;
}
<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">

    <div class="container text-center">
        <div class="row">
            @Html.ActionLink("Потребители", "Users", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn active btn-lg rounded-5" })
            @Html.ActionLink("Студенти", "Students", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn btn-lg rounded-5" })
        </div>
    </div>
    <br />
    <div class="overflow-y-scroll" style="height: 80%; Width: 94%; position: absolute;">
        <br />
        <br />
        @if (Model.Users == null)
        {
            <label class="fs-2 text-center" style="color: #ff03ad; width: 100%;">
                Все още няма поправителни изпити!
            </label>
            <br />
        }
        else
        {
            @foreach (var user in Model.Users)
            {
                <div class="list-group" style="margin-bottom: 1%; margin-right: 3%;">
                    <button type="button" data-user-id="@user.Id" class="list-group-item list-group-item-action" aria-current="true" data-bs-target="#exampleModal" data-bs-toggle="modal">
                        <div class="container text-center">
                            <div class="row">
                                <div class="col-1 text-uppercase">
                                    @counter
                                    @{
                                        counter++;
                                    }
                                </div>
                                <div class="col text-uppercase">
                                    @{
                                        string name = $"{@user.FirstName} {@user.MiddleName} {@user.LastName}";
                                    }
                                    @name
                                </div>
                            </div>
                        </div>
                    </button>
                </div>
            }

            @if (Model.IsChosen)
            {
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Вие избрахте</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body"> 
                                    <h2>@Model.ChosenUser.Id</h2>
                                     
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Информация</button>
                                <button type="button" class="btn btn-primary" data-bs-target="#exampleModalToggle3" data-bs-toggle="modal">Редактирай</button>
                                <button type="button" class="btn btn-danger" data-bs-target="#exampleModalToggle4" data-bs-toggle="modal">Изтрий</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalToggleLabel2">Информация</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <button type="button" class="btn btn-primary" data-bs-target="#exampleModal" data-bs-toggle="modal">Назад</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="exampleModalToggle3" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalToggleLabel2">Редакция</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <button type="button" class="btn btn-primary" data-bs-target="#exampleModal" data-bs-toggle="modal">Назад</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="exampleModalToggle4" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalToggleLabel2">Премахване</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <button type="button" class="btn btn-primary" data-bs-target="#exampleModal" data-bs-toggle="modal">Назад</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div> 
            }
        }
    </div>
</div>

<script>
    $(function () {
        $('button[data-bs-toggle="modal"]').click(function () {

            var userId = $(this).data('user-id'); 

            console.log(userId);

            // Make an AJAX request to fetch the user details and update the modal content
            $.ajax({
                url: '/Admin/GetChosenUser',
                type: 'GET',
                data: { id: userId, userId: '@Model.UserId' }
            });
        });
    });
</script>