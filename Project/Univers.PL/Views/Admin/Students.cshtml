@model Univers.Models.Models.AdminUsers

@{
    Layout = "../_AdminMenu.cshtml";
    TempData["Id"] = Model.UserId;
    TempData["Title"] = "Потребители";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #5349E3;
    }
</style>

@{
    int counter = 1;
}
<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">

    <div class="container text-center">
        <div class="row">
            @Html.ActionLink("Потребители", "Users", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn btn-lg rounded-5" })
            @Html.ActionLink("Студенти", "Students", "Admin", new { userId = Model.UserId}, new { @class = "col fs-3 btn active btn-lg rounded-5" })
        </div>
    </div>
    <br /> 
    @Html.ActionLink("Добави студент", "AddStudent", "Admin", new { userId = Model.UserId}, new { @class = "btn btn-success", style = "margin-left: 86%;" })
    <br />
    <br />
    <div class="overflow-y-scroll" style="height: 70%; Width: 94%; position: absolute;">
        <br />
        <br />
        @if (Model.Users == null)
        {
            <label class="fs-2 text-center" style="color: #ff03ad; width: 100%;">
                Все още няма поправителни изпити!
            </label>
            <br />
        }
        else
        {
            <table class="table"> 
                <tbody>
                    @foreach (var user in Model.Users)
                    { 
                        <tr>
                            <th scope="row">@counter @{
                                    counter++;
                                }</th>
                            <td>@user.FirstName @user.MiddleName @user.LastName</td>
                            <td class="col-1">
                                @Html.ActionLink("Информация", "SeeInfoStudent", "Admin", new { userId = $"{Model.UserId}", chosenUserId = $"{@user.Id}" }, new { @class = "btn btn-secondary" })
                            </td>
                            <td class="col-1">
                                @Html.ActionLink("Редактирай", "EditUser", "Admin", new { userId = $"{Model.UserId}", chosenUserId = $"{@user.Id}" }, new { @class = "btn btn-primary" })
                            </td>
                            <td class="col-1">
                                @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                                {
                                    @Html.Hidden("userId", Model.UserId)
                                    @Html.Hidden("chosenUserId", user.Id)
                                    @Html.Hidden("chosenUserName", $"{user.FirstName} {user.MiddleName} {user.LastName}")
                                    <button class="btn btn-danger" type="submit" onsubmit=$"return confirm('Сигурни ли сте, че искате да изтриете {@user.FirstName} {@user.MiddleName} {@user.LastName}');">Изтрий</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table> 
        }
    </div>
</div> 