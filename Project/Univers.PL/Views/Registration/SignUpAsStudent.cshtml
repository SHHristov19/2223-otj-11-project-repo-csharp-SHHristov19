@model Univers.Models.Models.StudentModel
@{
    ViewData["Title"] = "SignUp";
}

<link rel="stylesheet" href="~/css/LoginAndRegistration.css" asp-append-version="true" />

@using (Html.BeginForm("AddUser", "Registration", FormMethod.Post, new { @class = "div3" }))
{
    <div class="div4">
        <a href="SignUpAs"><img src="@Url.Content("~/images/Back.svg")" class="back" /></a><br /><br />

        <table style="width:100%; margin-left:15%; border-spacing: 0 10px;">
            <tr >
                <br /><br />
                <td >
                    <div>
                        @Html.LabelFor(model => model.Username, "Потребителско име", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.Username, new { @class = "tb2", required = "required", data_val_required = "Необходимо е да въведете потребителско име." })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.FirstName, "Име", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "tb2", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Password, "Парола", new { @class = "title"})<br>
                        @Html.PasswordFor(model => model.Password, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.MiddleName, "Презиме", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.MiddleName, new { @class = "tb2", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.PasswordConfirmation, "Повторете паролата", new { @class = "title"})<br>
                        @Html.PasswordFor(model => model.PasswordConfirmation, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.LastName, "Фамилия", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "tb2", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Email, "Email адрес", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.Email, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.PhoneNumber, "Телефон", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "tb2", type="tel", required = "required" , pattern=@"/^+359\d{9}", placeholder="+359" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Address, "Настоящ Адрес", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.Address, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Gender, "Пол", new { @class = "title"})<br>
                        @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Мъж"},
                    new SelectListItem { Text = "Жена"}
                    },  new { @class = "tb2", required = "required"})
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Citizenship, "Гражданство", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.Citizenship, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.CountryOfBirth, "Държава на раждане", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.CountryOfBirth, new { @class = "tb2", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.MunicipalityOfBirth, "Община на раждане", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.MunicipalityOfBirth, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.AreaOfBirth, "Област на раждане", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.AreaOfBirth, new { @class = "tb2", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.CityOfBirth, "Град на раждане", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.CityOfBirth, new { @class = "tb2", required = "required" })
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.DateOfBirth, "Дата на раждане", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "tb2", type = "date", required = "required" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        @Html.LabelFor(model => model.Identity, "ЕГН", new { @class = "title"})<br>
                        @Html.TextBoxFor(model => model.Identity, new { @class = "tb2", required = "required", pattern="[0-9]{10}" })<br /><br /><br />
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <button class="button4" type="submit">Напред</button>
    
}