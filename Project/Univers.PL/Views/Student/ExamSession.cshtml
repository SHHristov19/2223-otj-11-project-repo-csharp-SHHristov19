@model Univers.Models.Models.StudentModel

@{
    Layout = "../_StudentMenu.cshtml";
    TempData["Id"] = Model.Id;
    TempData["Title"] = "Изпитна сесия";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
 

<style>
    body{
        background: #5349E3 !important;
    }
    h1{
        text-align: center;
    }
</style>

<div style="max-width: 90%; margin-left: 3%; margin-right: 3%; margin-top: 2%;">

    <h1 class="">Предстоящи изпити</h1> <br /><br />
    
    <div class="container text-center"> 
        <div class="row">
            <div class="col h3">
                Редовна сесия
            </div>
            <div class="col h3">
                Поправителна сесия
            </div>
            <div class="col h3">
                Ликвидационна сесия
            </div>
        </div>
    </div>
    <br /><br />
    <div class="container text-center">
        <div class="row"> 
            <div class="col text-uppercase">
                 
            </div>
            <div class="col-4 text-uppercase">
                Дисциплина
            </div>
            <div class="col-3 text-uppercase">
                преподавател
            </div>
            <div class="col text-uppercase">
                Дата
            </div>
            <div class="col text-uppercase">
                ЗАЛА
            </div> 
        </div> 
    </div>
    @{
        int counter = 1;
    } 
        <table style="width:80%; border-spacing: 0 10px;">
            <br />
            <br />
            @if (Model.Exams.Count == 0)
            {
                <label class="lb1" style="color: #ff03ad; width: 100%;">
                    Все още няма изпити!
                </label>
                <br />
            }
            else
            {
                
                @foreach (var exam in Model.Exams)
                {
                    <div class="list-group" data-bs-spy="scroll">
                        <button type="button" class="list-group-item list-group-item-action" aria-current="true">
                            <div class="container text-center">
                                <div class="row">
                                    <div class="col text-uppercase">
                                        @counter
                                        @{
                                            counter++;
                                        }
                                    </div>
                                    <div class="col-4 text-uppercase">
                                        @exam.Subject
                                    </div>
                                    <div class="col-3 text-uppercase">
                                        @exam.Proctor
                                    </div>
                                    <div class="col text-uppercase">
                                        @exam.TimeOfStart.Value.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                    <div class="col text-uppercase">
                                        @exam.Location
                                    </div>
                                </div>
                            </div>
                        </button> <br>
                    </div>
                }
            }
        </table>

    </div>
</div>