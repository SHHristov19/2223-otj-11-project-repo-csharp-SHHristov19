@model Univers.Models.Models.User
@{
    ViewData["Title"] = "SignUpAs";
}

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class="div1">
    <a href="Login"><img src="@Url.Content("~/images/Back.svg")" class="back" /></a><br /><br />

    <img src="@Url.Content("~/images/Logo1.svg")" class="logo1" /><br /><br />

    <label class="lb1">
        Регистрирай се като:
    </label>

    @using (Html.BeginForm("ChooseRoleForSignUp", "Login", FormMethod.Post))
    {
        @Html.DropDownListFor(Model => Model.RoleChoice, new List<SelectListItem>
        {
            new SelectListItem { Text = "Студент",  },
            new SelectListItem { Text = "Служител", }
        }, new {@class = "list"})
        <button class="button3" type="submit">Регистрирация</button>
    }

</div>